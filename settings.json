{
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": false,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "workbench.colorTheme": "Webstorm IntelliJ Darcula Theme",
  "emmet.includeLanguages": {
    "*.erb": "html",
    "ruby": "html"
  },
  "stylelint.validate": ["css", "scss", "vue", "postcss"],
  "i18n-ally.displayLanguage": "de",
  "i18n-ally.enabledFrameworks": ["react"],
  "i18n-ally.localesPaths": ["apps/**/**"],
  "i18n-ally.pathMatcher": "{locale}/translations.json",
  "editor.inlineSuggest.enabled": true,
  "sonarlint.connectedMode.connections.sonarcloud": [
    {
      "organizationKey": "dgg-devops",
      "connectionId": "dgg-devops"
    }
  ],
  "git.autofetch": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "git.confirmSync": false
}
